{
  "name": "famulous-server",
  "version": "1.0.0",
  "main": "index.ts",
  "author": "Famulous",
  "license": "MIT",
  "engineStrict": true,
  "engines": {
    "node": "=12.16.3"
  },
  "scripts": {
    "build": "tsc -b ./server/app/tsconfig.json",
    "clean": "./scripts/clean.sh",
    "dev:setup": "docker-compose -f ./server/infra/local/docker-compose.yml up -d && yarn migrate",
    "watch-server": "DEBUG=knex:tx nodemon ./server/app/index.ts",
    "watch-client": "yarn --cwd client start",
    "dev:start": "yarn dev:setup && concurrently 'yarn:watch-*'",
    "dev:teardown": "docker-compose -f ./server/infra/local/docker-compose.yml down",
    "dev:test": "./scripts/test.sh",
    "migrate": "knex migrate:latest",
    "lint": "eslint . --ext .ts --fix",
    "postinstall": "yarn --cwd client",
    "prebuild": "yarn --cwd client build",
    "start": "NODE_ENV=production node ./dist/app/index.js",
    "test": "CI=true yarn dev:test"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^17.1.2",
    "@types/jest": "^24.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.0.4",
    "@types/passport": "^1.0.3",
    "@types/pg": "^7.14.3",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^24.0.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^24.0.0"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.1",
    "passport": "^0.4.1",
    "pg": "^8.2.1",
    "rxjs": "^6.5.5",
    "sequelize": "^5.21.10",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3",
    "uuid": "^8.1.0"
  }
}
