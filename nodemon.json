{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules", "dist", "logs", "docker"],
  "verbose": true,
  "delay": "2500",
  "execMap": {
    "ts": "node -r dotenv/config --require ts-node/register"
  },
  "watch": ["server/"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,ts"
}
