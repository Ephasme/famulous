{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "dist",
        "logs",
        "docker"
    ],
    "verbose": true,
    "execMap": {
        "ts": "node -r dotenv/config --require ts-node/register"
    },
    "watch": ["src/"],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
}